---
import {google} from "../data/config.json"
const {rating, noOfReviews} = google;
const starCount = Math.max(0, Math.floor(Number(rating) || 0));
const ratingValue = Number(rating) || 0;
---

<div class="google-badge">
  <div class="google-badge-content">
    <svg class="google-logo" width="22" height="22" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M17.64 9.20454C17.64 8.56636 17.5827 7.95272 17.4764 7.36363H9V10.845H13.8436C13.635 11.97 13.0009 12.9231 12.0477 13.5613V15.8195H14.9564C16.6582 14.2527 17.64 11.9454 17.64 9.20454Z" fill="#4285F4"/>
      <path d="M9 18C11.43 18 13.4673 17.1941 14.9564 15.8195L12.0477 13.5613C11.2418 14.1013 10.2109 14.4204 9 14.4204C6.65591 14.4204 4.67182 12.8372 3.96409 10.71H0.957275V13.0418C2.43818 15.9831 5.48182 18 9 18Z" fill="#34A853"/>
      <path d="M3.96409 10.71C3.78409 10.17 3.68182 9.59318 3.68182 9C3.68182 8.40682 3.78409 7.83 3.96409 7.29V4.95818H0.957275C0.347727 6.17318 0 7.54773 0 9C0 10.4523 0.347727 11.8268 0.957275 13.0418L3.96409 10.71Z" fill="#FBBC05"/>
      <path d="M9 3.57955C10.3214 3.57955 11.5077 4.03364 12.4405 4.92545L15.0218 2.34409C13.4632 0.891818 11.4259 0 9 0C5.48182 0 2.43818 2.01682 0.957275 4.95818L3.96409 7.29C4.67182 5.16273 6.65591 3.57955 9 3.57955Z" fill="#EA4335"/>
    </svg>
    
    <div class="badge-info">
      <div class="rating-row">
        <span class="rating-number">{ratingValue.toFixed(1)}</span>
        <div class="stars" aria-hidden="true">
          {Array.from({ length: 5 }).map((_, i) => (
            <svg width="15" height="15" viewBox="0 0 16 16" fill={i < starCount ? "#FBBC04" : "rgba(255,255,255,0.3)"} xmlns="http://www.w3.org/2000/svg">
              <path d="M8 0.5L10.163 5.38197L15.5 6.11305L11.75 9.68197L12.6574 15L8 12.382L3.34257 15L4.25 9.68197L0.5 6.11305L5.83697 5.38197L8 0.5Z"/>
            </svg>
          ))}
        </div>
      </div>
      <div class="review-text">{noOfReviews} Google reviews</div>
    </div>
  </div>
  <span class="visually-hidden">Rated {ratingValue.toFixed(1)} stars out of 5 based on {noOfReviews} Google reviews</span>
</div>

<style>
  .google-badge {
    display: inline-block;
    background: transparent;
    border-radius: 6px;
    padding: 12px 18px;
    margin-top: 1.5rem;
    transition: all 0.3s ease;
    border: 2px solid rgba(255, 255, 255, 0.9);
  }

  .google-badge:hover {
    border-color: rgba(255, 255, 255, 1);
    background: rgba(255, 255, 255, 0.05);
  }

  .google-badge-content {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .google-logo {
    flex-shrink: 0;
  }

  .badge-info {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .rating-row {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .rating-number {
    font-size: 1.125rem;
    font-weight: 700;
    color: #ffffff;
    line-height: 1;
  }

  .stars {
    display: flex;
    gap: 1px;
    align-items: center;
  }

  .review-text {
    font-size: 0.8125rem;
    color: rgba(255, 255, 255, 0.9);
    font-weight: 500;
    line-height: 1;
  }

  @media (max-width: 576px) {
    .google-badge {
      padding: 10px 16px;
    }

    .google-badge-content {
      gap: 10px;
    }

    .rating-number {
      font-size: 1rem;
    }

    .review-text {
      font-size: 0.75rem;
    }
  }
</style>