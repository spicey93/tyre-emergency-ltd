---
// src/components/Services.astro
import { pages } from "../data/config.json";
import { getProvidedServices } from "../utils/services";
import slug from "../utils/slug";

interface Props {
  heading?: string;
  subheading?: string;
  columns?: 2 | 3 | 4;
}

const { 
  heading = "Our Services",
  subheading = "Professional mobile tyre services delivered to your location",
  columns = 4 
} = Astro.props;

const services = getProvidedServices(pages.services);

// Create icon mapping for services
const serviceIcons: Record<string, string> = {
  "Mobile Tyre Fitting": "truck",
  "Emergency Mobile Tyre Fitting": "exclamation-triangle-fill",
  "Wheel Balancing": "circle-half",
  "Locking Wheel Nut Removal": "lock",
  "Puncture Repair": "patch-check",
  "Mobile Car Battery Replacement": "battery-charging",
  "Mobile Caravan Tyre Fitting": "house-door",
  "TPMS": "speedometer2"
};

const colClass = `col-lg-${12 / columns}`;
---

<section class="services-section bg-light py-5 mt-5">
  <div class="container">
    {heading && <h2 class="text-center mb-5">{heading}</h2>}
    
    <div class="row g-3">
      {services.map((service) => (
        <div class={`${colClass} col-md-6 col-sm-6`}>
          <a href={`/services/${slug(service.pageTitle)}`} class="service-card-link">
            <div class="service-card">
              <div class="service-card-content">
                <div class="service-icon">
                  <i class={`bi bi-${serviceIcons[service.pageTitle] || "gear"}`}></i>
                </div>
                <h3 class="service-title">{service.pageTitle}</h3>
              </div>
            </div>
          </a>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .services-section {
    position: relative;
  }

  .service-card-link {
    text-decoration: none;
    color: inherit;
    display: block;
    height: 100%;
  }

  .service-card {
    background: var(--bs-white, white);
    border-radius: 14px;
    padding: 2rem 1.75rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    /* transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1); */
    display: flex;
    flex-direction: column;
    align-items: stretch;
    gap: 0;
    border: 2px solid transparent;
    position: relative;
    height: 100%;
    overflow: hidden;
  }

  .service-card::before {
    content: '';
    position: absolute;
    top: -40px;
    right: -40px;
    width: 120px;
    height: 120px;
    /* background: radial-gradient(circle, rgba(var(--bs-primary-rgb, 13, 110, 253), 0.04) 0%, transparent 70%); */
    border-radius: 50%;
    transition: all 0.5s ease;
  }

  .service-card:hover {
    border-color: var(--bs-primary);
  }

  .service-card:hover::before {
    transform: scale(1.3);
    opacity: 0.8;
  }

  .service-card-content {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 1.25rem;
    flex: 1;
    width: 100%;
    text-align: left;
  }

  .service-icon {
    width: 70px;
    height: 70px;
    background: var(--bs-primary);
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: all 0.3s ease;
    box-shadow: 0 4px 16px rgba(var(--bs-primary-rgb, 13, 110, 253), 0.25);
    position: relative;
  }

  .service-icon::after {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 14px;
  }



  .service-icon i {
    font-size: 1.9rem;
    color: var(--bs-white, white);
    position: relative;
    z-index: 1;
  }

  .service-title {
    font-size: 1.05rem;
    font-weight: 600;
    margin: 0;
    color: var(--bs-dark);
    line-height: 1.35;
    flex: 1;
    transition: color 0.3s ease;
  }

  .service-card:hover .service-title {
    color: var(--bs-primary);
  }

  /* Responsive adjustments */
  @media (max-width: 991.98px) {
    .service-card {
      padding: 1.75rem 1.5rem;
    }
    
    .service-icon {
      width: 64px;
      height: 64px;
    }
    
    .service-icon i {
      font-size: 1.75rem;
    }
    
    .service-title {
      font-size: 1rem;
    }
  }

  @media (max-width: 575.98px) {
    .service-card {
      padding: 1.5rem 1.25rem;
    }
    
    .service-card-content {
      flex-direction: column;
      text-align: center;
    }
    
    .service-icon {
      width: 60px;
      height: 60px;
    }
    
    .service-icon i {
      font-size: 1.65rem;
    }

    .service-title {
      font-size: 0.95rem;
    }
  }
</style>