---
// src/components/Services.astro
import { pages } from "../data/config.json";
import { getProvidedServices } from "../utils/services";

interface Props {
  heading?: string;
  subheading?: string;
  columns?: 2 | 3 | 4;
}

const { 
  heading = "Our Services",
  subheading = "Professional mobile tyre services delivered to your location",
  columns = 4 
} = Astro.props;

const services = getProvidedServices(pages.services);

// Create icon mapping for services
const serviceIcons: Record<string, string> = {
  "Mobile Tyre Fitting": "truck",
  "Emergency Mobile Tyre Fitting": "exclamation-triangle-fill",
  "Wheel Balancing": "circle-half",
  "Locking Wheel Nut Removal": "lock",
  "Puncture Repair": "patch-check",
  "Mobile Car Battery Replacement": "battery-charging",
  "Mobile Caravan Tyre Fitting": "house-door",
  "TPMS": "speedometer2"
};

function slugify(text: string): string {
  return text.toLowerCase().trim().replace(/\s+/g, "-").replace(/[^\w-]/g, "");
}

const colClass = `col-lg-${12 / columns}`;
---

<section class="services-section bg-light py-5">
  <div class="container">
    {heading && <h2 class="text-center mb-2">{heading}</h2>}
    {subheading && <p class="text-center text-muted mb-5">{subheading}</p>}
    
    <div class="row g-3">
      {services.map((service) => (
        <div class={`${colClass} col-md-6 col-sm-6`}>
          <a href={`/services/${slugify(service.pageTitle)}`} class="service-card-link">
            <div class="service-card">
              <div class="service-card-content">
                <div class="service-icon">
                  <i class={`bi bi-${serviceIcons[service.pageTitle] || "gear"}`}></i>
                </div>
                <h3 class="service-title">{service.pageTitle}</h3>
              </div>
              <div class="service-arrow-wrapper">
                <i class="bi bi-arrow-right service-arrow"></i>
              </div>
            </div>
          </a>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .services-section {
    position: relative;
  }

  .service-card-link {
    text-decoration: none;
    color: inherit;
    display: block;
    height: 100%;
  }

  .service-card {
    background: var(--bs-white, white);
    border-radius: 12px;
    padding: 1.75rem 1.5rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 1rem;
    border: 2px solid transparent;
    position: relative;
    height: 100%;
  }

  .service-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 28px rgba(var(--bs-primary-rgb, 13, 110, 253), 0.18);
    border-color: var(--bs-primary);
  }

  .service-card-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    flex: 1;
    width: 100%;
  }

  .service-icon {
    width: 64px;
    height: 64px;
    background: var(--bs-primary);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: all 0.3s ease;
    box-shadow: 0 4px 16px rgba(var(--bs-primary-rgb, 13, 110, 253), 0.25);
  }

  .service-card:hover .service-icon {
    transform: scale(1.1);
    box-shadow: 0 8px 24px rgba(var(--bs-primary-rgb, 13, 110, 253), 0.35);
    filter: brightness(0.95);
  }

  .service-icon i {
    font-size: 1.75rem;
    color: var(--bs-white, white);
  }

  .service-title {
    font-size: 1.05rem;
    font-weight: 600;
    margin: 0;
    color: var(--bs-dark, #212529);
    line-height: 1.4;
    min-height: 2.8em;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .service-arrow-wrapper {
    width: 36px;
    height: 36px;
    background: rgba(var(--bs-primary-rgb, 13, 110, 253), 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: all 0.3s ease;
  }

  .service-card:hover .service-arrow-wrapper {
    background: var(--bs-primary);
    transform: scale(1.1);
  }

  .service-arrow {
    color: var(--bs-primary);
    font-size: 1.2rem;
    transition: all 0.3s ease;
  }

  .service-card:hover .service-arrow {
    color: white;
  }

  /* Responsive adjustments */
  @media (max-width: 991.98px) {
    .service-card {
      padding: 1.5rem 1.25rem;
    }
    
    .service-icon {
      width: 56px;
      height: 56px;
    }
    
    .service-icon i {
      font-size: 1.5rem;
    }
    
    .service-title {
      font-size: 1rem;
      min-height: 2.6em;
    }

    .service-arrow-wrapper {
      width: 34px;
      height: 34px;
    }

    .service-arrow {
      font-size: 1.1rem;
    }
  }

  @media (max-width: 575.98px) {
    .service-card {
      padding: 1.5rem 1rem;
    }
    
    .service-icon {
      width: 56px;
      height: 56px;
    }
    
    .service-icon i {
      font-size: 1.5rem;
    }

    .service-title {
      font-size: 0.95rem;
      min-height: 2.8em;
    }

    .service-arrow-wrapper {
      width: 32px;
      height: 32px;
    }

    .service-arrow {
      font-size: 1rem;
    }
  }
</style>