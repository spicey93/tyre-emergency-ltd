---
// TyreBrands.astro
import bridgestone from "../images/bridgestone.jpg";
import continental from "../images/continental.jpg";
import dunlop from "../images/dunlop.jpg";
import firestone from "../images/firestone.jpg";
import goodyear from "../images/goodyear.jpg";
import hankook from "../images/hankook.jpg";
import michelin from "../images/michelin.jpg";
import pirelli from "../images/pirelli.jpg";

const brands = [
  { name: "Bridgestone", src: bridgestone },
  { name: "Continental", src: continental },
  { name: "Dunlop", src: dunlop },
  { name: "Firestone", src: firestone },
  { name: "Goodyear", src: goodyear },
  { name: "Hankook", src: hankook },
  { name: "Michelin", src: michelin },
  { name: "Pirelli", src: pirelli },
];
---

<section class="py-4 bg-light mt-5">
  <!-- <div class="container"> -->
    <div class="carousel-container">
      <div class="carousel-track">
        {
          // Duplicate the brands array twice for seamless infinite loop
          [...brands, ...brands].map((brand) => (
            <div class="brand-item">
              <img
                src={brand.src.src}
                alt={`${brand.name} tyres`}
              />
            </div>
          ))
        }
      </div>
    </div>
  <!-- </div> -->
</section>

<style>
  .carousel-container {
    overflow: hidden;
    position: relative;
    width: 100%;
  }

  .carousel-track {
    display: flex;
    gap: 3rem;
    animation: scroll 30s linear infinite;
    width: fit-content;
  }

  .carousel-track:hover {
    animation-play-state: paused;
  }

  .brand-item {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 150px;
    height: 60px;
  }

  .brand-item img {
    max-width: 100%;
    max-height: 100%;
    width: auto;
    height: auto;
    object-fit: contain;
    filter: grayscale(100%) opacity(0.6);
    transition: filter 0.3s ease;
  }

  .brand-item:hover img {
    filter: grayscale(0%) opacity(1);
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .carousel-track {
      gap: 2rem;
      animation-duration: 20s;
    }

    .brand-item {
      width: 120px;
      height: 50px;
    }
  }
</style>