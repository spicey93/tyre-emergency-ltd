---
// src/components/Footer.astro (REFACTORED)
import SocialLinks from "../components/SocialLinks.astro";
import Address from "../components/Address.astro";
import { company } from "../data/config.json";
import { formatPhoneForLink } from "../utils/format";
import { quickLinks } from "../utils/navigation";

const { name, phone, email, address, description, vatNo, companyNo, showAddress = true } = company;
const year = new Date().getFullYear();
---

<footer class="bg-dark text-light">
  <div class="container pt-5 pb-3">
    <div class="row">
      <div class="col-md-4 mb-4 mb-md-0">
        <h5 class="text-white mb-3">{name}</h5>
        {description && <p class="small mb-3">{description}</p>}
        <SocialLinks />
      </div>

      <div class="col-md-4 mb-4 mb-md-0">
        <h6 class="text-white mb-3">Quick Links</h6>
        <ul class="list-unstyled small">
          {quickLinks.map((link) => (
            <li>
              <a href={link.href} class="link-light text-decoration-none">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div class="col-md-4">
        <h6 class="text-white mb-3">Contact</h6>
        {showAddress && <Address address={address} />}
        <div class="small mt-2">
          <a
            href={`tel:${formatPhoneForLink(phone)}`}
            class="link-light text-decoration-none"
          >
            {phone}
          </a><br />
          <a href={`mailto:${email}`} class="link-light text-decoration-none">
            {email}
          </a>
        </div>
      </div>
    </div>

    <hr class="border-light opacity-10" />

    <div class="d-flex flex-column flex-md-row justify-content-between small align-items-center">
      <div>© {year} {name}. All rights reserved.</div>

      <div class="small mt-2 mt-md-0">
        VAT: {vatNo} • Company No: {companyNo}
      </div>

      <div class="mt-2 mt-md-0">
        <a
          href="https://tyredigital.co.uk"
          target="_blank"
          rel="noopener noreferrer"
          class="link-light text-decoration-none d-inline-flex align-items-center"
          aria-label="Tyre Digital website (opens in a new tab)"
          title="Tyre Digital — opens in a new tab"
        >
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            class="me-2"
            aria-hidden="true"
            focusable="false"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
          >
            <circle cx="12" cy="12" r="7"></circle>
            <circle cx="12" cy="12" r="3"></circle>
          </svg>
          <span class="small">Website designed by Tyre Digital</span>
        </a>
      </div>
    </div>
  </div>
</footer>